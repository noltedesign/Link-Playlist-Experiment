.cell.feed
  %h4 Add Site feeds
  
  %form.addfeed_form{:method=>"post", :action=>"/add-global"}
    %label Add Feed
    %input#addfeed{:type=>"text", :required => true, :name => 'urls[link]', :placeholder => 'RSS URL', :class=>"square"}
  
    %br
    %br
    %br
  
    %ul.checkbox
      %li
        %input.checkbox{:type=>"checkbox", :name => 'urls[feed_categories][]', :value => 'main'} Main
      %li
        %input.checkbox{:type=>"checkbox", :name => 'urls[feed_categories][]', :value => 'tech'} Tech
      %li
        %input.checkbox{:type=>"checkbox", :name => 'urls[feed_categories][]', :value => 'design'} Design
      %li
        %input.checkbox{:type=>"checkbox", :name => 'urls[feed_categories][]', :value => 'design'} Entertainment
      %li
        %input.checkbox{:type=>"checkbox", :name => 'urls[feed_categories][]', :value => 'design'} Politics
    
    %br
    
    %input.feedtype{:type=>"hidden", :name => 'urls[feed_type]', :value => 'global' }
    
    %button{:type=>"submit"} +

