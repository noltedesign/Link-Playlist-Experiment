=haml :'partials/intro'

.cell.feed
  %h4 Signup
  
  %form.signup{:method=>"post", :action=>"/signup"}
    .field
      %input#email{:type=>"email", :required => true, :name => 'users[email]', :placeholder =>  'email'}    
    
    .field
      %input#password{:type=>"password", :required => true, :name => 'password', :placeholder => 'password'}

    .field
      %input#userurl{:type=>"text", :required => true, :name => 'users[userurl]', :placeholder => 'Your URL'}
    
    %button{:type=>"submit"} Create